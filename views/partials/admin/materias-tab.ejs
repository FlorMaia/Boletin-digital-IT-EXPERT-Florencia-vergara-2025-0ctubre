<div id="materias-content" class="tab-content">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-book me-2 text-primary"></i>
                    Gestión de Materias
                </h1>
                <p class="text-muted mb-0">Administra las materias por modalidad educativa</p>
            </div>
            <button class="btn btn-primary" onclick="showCreateMateriaModal()">
                <i class="bi bi-plus me-1"></i> Nueva Materia
            </button>
        </div>
    </div>

    <!-- Estadísticas rápidas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card stats-primary d-flex justify-content-between align-items-center">
                <div class="stats-info">
                    <h3 id="total-materias" class="stats-number">0</h3>
                    <p class="stats-label">Materias</p>
                </div>
                <div class="stats-icon">
                    <i class="bi bi-book"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card stats-success d-flex justify-content-between align-items-center">
                <div class="stats-info">
                    <h3 id="total-materias-asignadas" class="stats-number">0</h3>
                    <p class="stats-label">Asignadas</p>
                </div>
                <div class="stats-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card stats-warning d-flex justify-content-between align-items-center">
                <div class="stats-info">
                    <h3 id="total-horas" class="stats-number">0</h3>
                    <p class="stats-label">Horas Semanales</p>
                </div>
                <div class="stats-icon">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card stats-info d-flex justify-content-between align-items-center">
                <div class="stats-info">
                    <h3 id="total-profesores-materias" class="stats-number">0</h3>
                    <p class="stats-label">Profesores</p>
                </div>
                <div class="stats-icon">
                    <i class="bi bi-person-badge"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-6 mb-3">
                    <label for="filter-modalidad-materias" class="form-label">
                        <i class="bi bi-mortarboard me-1"></i>Filtrar por Modalidad
                    </label>
                    <select id="filter-modalidad-materias" class="form-select">
                        <option value="">Todas las modalidades</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="search-materias" class="form-label">
                        <i class="bi bi-search me-1"></i>Buscar
                    </label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="search-materias" placeholder="Buscar materias...">
                        <button class="btn btn-outline-primary" type="button" onclick="searchMaterias()">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de materias -->
    <div class="card">
        <div class="card-body">
            <div id="materias-loading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2 text-muted">Cargando materias...</p>
            </div>
            
            <div id="materias-table" class="table-responsive" style="display: none;">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Materia</th>
                            <th>Código</th>
                            <th>Modalidad</th>
                            <th class="text-center">Horas</th>
                            <th class="text-center">Asignaciones</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="materias-tbody">
                        <!-- Los datos se cargarán dinámicamente -->
                    </tbody>
                </table>
                <div id="no-materias" class="text-center py-4" style="display: none;">
                    <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 text-muted">No hay materias disponibles</h5>
                    <p class="text-muted">Crea una nueva materia o cambia los filtros de búsqueda</p>
                    <button class="btn btn-primary" onclick="showCreateMateriaModal()">
                        <i class="bi bi-plus me-1"></i> Nueva Materia
                    </button>
                </div>
            </div>
        </div>
    </div>
</div> 