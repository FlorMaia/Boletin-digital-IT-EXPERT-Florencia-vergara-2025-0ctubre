<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Colegio Ernesto Guevara</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .navbar-red { background: linear-gradient(135deg, #8B0000, #dc3545) !important; }
        .main-title { color: #333; font-weight: bold; }
        .table-notas th { background-color: #c90808; color: white; text-align: center; vertical-align: middle; }
        .table-notas td { text-align: center; vertical-align: middle; }
        .materia-name { text-align: left !important; font-weight: bold; }
        .nota-aprobada { background-color: #d4edda; color: #155724; }
        .nota-desaprobada { background-color: #f8d7da; color: #721c24; }
        .nota-final { font-weight: bold; font-size: 1.1rem; }
    </style>
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-red">
         <div class="container">
            <div class="d-flex align-items-center">
                <i class="bi bi-mortarboard text-white me-2 fs-4"></i>
                <span class="navbar-brand mb-0 h4 fw-bold text-white">Aula Digital</span>
            </div>
            <div class="navbar-nav ms-auto d-flex flex-row align-items-center">
                <span class="text-white me-3">
                    <i class="bi bi-person-circle"></i>
                    <%= user.first_name %> <%= user.last_name %>
                </span>
                <a class="nav-link text-white fw-bold" href="/logout">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <a href="/dashboard" class="btn btn-outline-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Volver a Mi Progreso
        </a>
        
        <div class="card">
            <div class="card-header text-center bg-white">
                <h1 class="main-title mb-1">Boletín Académico <%= ano %></h1>
                <p class="text-muted mb-0">Curso: <%= curso %></p>
            </div>
            <div class="card-body">
                 <% if (boletin && boletin.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-notas">
                            <thead>
                                <tr>
                                    <th rowspan="2">Materia</th>
                                    <th colspan="3">Primer Cuatrimestre</th>
                                    <th colspan="3">Segundo Cuatrimestre</th>
                                    <th rowspan="2">Nota Final</th>
                                </tr>
                                <tr>
                                    <th>Inf. 1</th>
                                    <th>Inf. 2</th>
                                    <th>Cierre 1°</th>
                                    <th>Inf. 3</th>
                                    <th>Inf. 4</th>
                                    <th>Cierre 2°</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% boletin.forEach(materia => { %>
                                    <tr>
                                        <td class="materia-name"><%= materia.materia %></td>
                                        <td class="<%= getNotaClass(materia.informe1) %>"><%= formatNota(materia.informe1) %></td>
                                        <td class="<%= getNotaClass(materia.informe2) %>"><%= formatNota(materia.informe2) %></td>
                                        <td class="fw-bold <%= getNotaClass(materia.cuatrimestre1) %>"><%= formatNota(materia.cuatrimestre1) %></td>
                                        <td class="<%= getNotaClass(materia.informe3) %>"><%= formatNota(materia.informe3) %></td>
                                        <td class="<%= getNotaClass(materia.informe4) %>"><%= formatNota(materia.informe4) %></td>
                                        <td class="fw-bold <%= getNotaClass(materia.cuatrimestre2) %>"><%= formatNota(materia.cuatrimestre2) %></td>
                                        <td class="nota-final <%= getNotaClass(materia.final) %>"><%= formatNota(materia.final) %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-warning text-center">No hay notas detalladas para mostrar para este año.</div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%
// Funciones auxiliares
function getNotaClass(nota) {
    if (nota === null || nota === undefined) return '';
    if (parseFloat(nota) >= 6) return 'nota-aprobada';
    return 'nota-desaprobada';
}
function formatNota(nota) {
    if (nota === null || nota === undefined) return 'N/C';
    return parseFloat(nota).toFixed(2);
}
%> 