<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración - Colegio Ernesto Guevara</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <!-- Estilos del dashboard -->
    <%- include('../partials/admin/admin-styles') %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/admin/admin-navbar', { user: user }) %>

    <div class="container-fluid">
        <div class="row">
         
            <%- include('../partials/admin/admin-sidebar') %>

          
            <main class="col-md-9 ms-sm-auto col-lg-10 content-area">
                
                <!-- TAB: DASHBOARD -->
                <%- include('../partials/admin/dashboard-tab', { 
                    stats: stats, 
                    statsByModalidad: statsByModalidad, 
                    recentUsers: recentUsers 
                }) %>

                <!-- TAB: USUARIOS -->
                <%- include('../partials/admin/usuarios-tab') %>

                <!-- TAB: ESTRUCTURA ACADÉMICA -->
                <%- include('../partials/admin/academico-tab') %>

                <!-- TAB: MATERIAS -->
                <%- include('../partials/admin/materias-tab') %>

                <!-- TAB: ASIGNACIONES -->
                <%- include('../partials/admin/asignaciones-tab') %>

                <!-- TAB: REPORTES -->
                <%- include('../partials/admin/reportes-tab') %>
            </main>
        </div>
    </div>

    <!-- Modales -->
    <%- include('../partials/admin/user-modal') %>
    <%- include('../partials/admin/crud-modals') %>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/crud-academico.js"></script>
    <%- include('../partials/admin/admin-scripts') %>
</body>
</html> 